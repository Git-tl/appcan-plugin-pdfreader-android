<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ebookdroid="http://ebookdroid.org"
    android:summary="@string/plugin_pdf_pref_navigation_category_summary"
    android:title="@string/plugin_pdf_pref_navigation_category" >

    <org.emdev.ui.preference.ColorPickerPreference
            android:key="link_highlight"
            android:summary="@string/plugin_pdf_pref_link_highlight_summary"
            android:title="@string/plugin_pdf_pref_link_highlight_title" />

    <org.emdev.ui.preference.ColorPickerPreference
            android:key="search_highlight"
            android:summary="@string/plugin_pdf_pref_search_highlight_summary"
            android:title="@string/plugin_pdf_pref_search_highlight_title" />

    <org.emdev.ui.preference.ColorPickerPreference
            android:key="current_search_highlight"
            android:summary="@string/plugin_pdf_pref_current_search_highlight_summary"
            android:title="@string/plugin_pdf_pref_current_search_highlight_title" />

    <CheckBoxPreference
            android:defaultValue="@string/plugin_pdf_pref_storeGotoHistory_defvalue"
            android:key="@string/plugin_pdf_pref_storeGotoHistory_id"
            android:summary="@string/plugin_pdf_pref_storeGotoHistory_summary"
            android:title="@string/plugin_pdf_pref_storeGotoHistory_title" />

    <CheckBoxPreference
            android:defaultValue="@string/plugin_pdf_pref_storeLinkGotoHistory_defvalue"
            android:key="@string/plugin_pdf_pref_storeLinkGotoHistory_id"
            android:summary="@string/plugin_pdf_pref_storeLinkGotoHistory_summary"
            android:title="@string/plugin_pdf_pref_storeLinkGotoHistory_title" />

    <CheckBoxPreference
            android:defaultValue="@string/plugin_pdf_pref_storeOutlineGotoHistory_defvalue"
            android:key="@string/plugin_pdf_pref_storeOutlineGotoHistory_id"
            android:summary="@string/plugin_pdf_pref_storeOutlineGotoHistory_summary"
            android:title="@string/plugin_pdf_pref_storeOutlineGotoHistory_title" />

    <CheckBoxPreference
            android:defaultValue="@string/plugin_pdf_pref_storeSearchGotoHistory_defvalue"
            android:key="@string/plugin_pdf_pref_storeSearchGotoHistory_id"
            android:summary="@string/plugin_pdf_pref_storeSearchGotoHistory_summary"
            android:title="@string/plugin_pdf_pref_storeSearchGotoHistory_title" />

</PreferenceScreen>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ebookdroid="http://ebookdroid.org"
    android:key="opds_prefs"
    android:summary="@string/plugin_pdf_pref_opds_category_summary"
    android:title="@string/plugin_pdf_pref_opds_category" >

    <EditTextPreference
        android:defaultValue="@string/plugin_pdf_pref_opds_downloaddir_defvalue"
        android:key="@string/plugin_pdf_pref_opds_downloaddir_id"
        android:summary="@string/plugin_pdf_pref_opds_downloaddir_summary"
        android:title="@string/plugin_pdf_pref_opds_downloaddir_title" />

    <CheckBoxPreference
        android:defaultValue="@string/plugin_pdf_pref_opds_filterbooktypes_defvalue"
        android:key="@string/plugin_pdf_pref_opds_filterbooktypes_id"
        android:summary="@string/plugin_pdf_pref_opds_filterbooktypes_summary"
        android:title="@string/plugin_pdf_pref_opds_filterbooktypes_title" />

    <CheckBoxPreference
        android:defaultValue="@string/plugin_pdf_pref_opds_downloadarchives_defvalue"
        android:key="@string/plugin_pdf_pref_opds_downloadarchives_id"
        android:summary="@string/plugin_pdf_pref_opds_downloadarchives_summary"
        android:title="@string/plugin_pdf_pref_opds_downloadarchives_title" />
    
    <CheckBoxPreference
        android:defaultValue="@string/plugin_pdf_pref_opds_unpackarchives_defvalue"
        android:key="@string/plugin_pdf_pref_opds_unpackarchives_id"
        android:summary="@string/plugin_pdf_pref_opds_unpackarchives_summary"
        android:title="@string/plugin_pdf_pref_opds_unpackarchives_title" />

    <CheckBoxPreference
        android:defaultValue="@string/plugin_pdf_pref_opds_deletearchives_defvalue"
        android:key="@string/plugin_pdf_pref_opds_deletearchives_id"
        android:summary="@string/plugin_pdf_pref_opds_deletearchives_summary"
        android:title="@string/plugin_pdf_pref_opds_deletearchives_title" />

</PreferenceScreen>